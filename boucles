        /* boucle for in
        
        pour les tableaux et les objets 
          un peu comme le foreach en php ca agit sur chaque element
          du coup si c'est un tableau on peut recuperer l'index et ou la valeur 
          et si c'est un objet on peut egalement recuperer la cle et ou la valeur

        const objetPerson = {
            nom : 'Estelle',
            prenom : 'Aya',
            age: 14

        }
        const notes = [12, 15, 20, 18]
        for(let i in notes){
            console.log(notes[i])
        }
       for(let key in objetPerson){
        console.log(key +' : ' + objetPerson[key])                                                                                                                                                                                                                                                                                                                    
       }
      
        /* boucle for of 
        
        si je suis interessee que par la valeur et non par l'index ou la cle il est preferable d'utiliser cette boucle
        seulement sur les choses iterables commes les tableaux  et les chaines de caractere ca ne fonctionne pas pour les objets
        const notes = [12, 15, 20, 18]
        const mot = "Bonjour"
        for(let letter of mot){
            console.log(letter)
        }
        */  
